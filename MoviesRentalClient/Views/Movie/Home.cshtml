@model IEnumerable<MoviesRentalClient.Models.Movies>
@{
    ViewBag.Title = "Home";
}

<body>
    <!-- navigation -->
    <!-- data-panel -->
    <div class="container mt-5 ">
        <!--search bar-->
        <!--veiw-->
        <div class="viewbox  ">
            <div class="view"><i class="fa fa-bars" id="btn-listModel" aria-hidden="true"></i></div>
            <div class="view"><i class="fa fa-th" aria-hidden="true"></i></div>

        </div>
        <div class="clearfix"></div>
        @if (Model.Count() < 1)
        {
            <div class="row">
                <div class="col-md-6">
                    <h5>No Movies to show.</h5>
                </div>
            </div>
        }
        else
        {
            <div class="row" id="data-panel">
                @foreach (var movie in Model)
                {
                    <div class="col-sm-3">
                        <div class="card mb-2">
                            <img class="card-img-top " src="@movie.ImagePath" alt="Card image cap">
                            <div class="card-body movie-item-body">
                                <h5 class="card-title">@movie.MovieName</h5>
                            </div>
                            <!-- "More" button -->
                            <div class="card-footer">
                                @Html.ActionLink("Detail", "Detail", new { movieId = movie.MovieId }, new { @class = "btn btn-primary btn-show-movie" })

                                <!-- favorite button -->
                            </div>
                        </div>
                    </div>

                }
            </div>
        }
        <!-- data-panel -->
    </div>
</body>
